<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link href="~/hit.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/lib/knockout/knockout-latest.min.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    <script src="~/js/Site.js"></script>
    @RenderSection("head", required: false)
</head>

<body>

    <header>
        @{
            var navigationTabs = new[] {
                new { id = 0, text = "LogIn", icon = "fas fa-user", content = "/Home/Login" },
                new { id = 1, text = "Home", icon = "fas fa-home", content = "/Home/Index" },
                new { id = 2, text = "Settings", icon = "fas fa-cogs", content = "/Home/Settings" }
            };
            int selectedNavigation = @ViewBag.SelectedNavigation;
        }
        @(Html.DevExtreme().Tabs()
                .ID("headerNavigationBar")
                .DataSource(navigationTabs)
                .SelectedIndex(selectedNavigation)
                .OnItemClick("headerTabNavigation")
                )
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <span>&copy; 2020 - ExtECR Driver v. @ViewBag.AppVersion</span>
    </footer>

</body>

</html>

<script>
    var CurrentExtecr = new ExtecrModel();
</script>
