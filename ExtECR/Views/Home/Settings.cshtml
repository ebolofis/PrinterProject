    List<string> ExtecrTypes = new List<string>() { "Generic", "Opos", "Opos3", "EpsonFiscal", "SynergyPF500", "ZipDitron", "HDM" ,"RBS"};
    int i;
}
<div>
    <ul class="tabs">
        <li data-tab-target="#home" class="active tab">Print Settings</li>
        <li data-tab-target="#pricing" class="tab">Installation Data</li>
        <li data-tab-target="#about" class="tab">Printers</li>
        <li data-tab-target="#news" class="tab">Printer Test</li>
    </ul>

    <div class="tab-content">
