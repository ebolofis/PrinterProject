                    <th>Print Times</th>
                    <th>Kitchen On</th>
                    <th>Per Item</th>
                    <th>Merge Same Codes</th>
                    <th>Header Gap</th>
                    <th>Use Cutter</th>
                    <th>Use Buzzer</th>
                </tr>
                <tr>
                    <td>Jill</td>
                    <td>Smith</td>
                    <td>50</td>
                    <td>Jill</td>
                    <td>Smith</td>
                    <td>50</td>
                    <td>Jill</td>
                    <td>Smith</td>
                    <td>50</td>
                    <td>Jill</td>
                    <td>Smith</td>
                    <td>50</td>
                    <td>Jill</td>
                    <td>Smith</td>

                </tr>
                <tr>
                    <td>Eve</td>
                    <td>Jackson</td>
                    <td>94</td>
                </tr>
            </table>

        </div>
        <div id="pricing" data-tab-content>
            <button>Save</button>
            <h5 class="bluecolor">General Settings</h5>
            <div class="flex-container">
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20">   Username </label>
                    <input type="text" class="instyle" value="@idata.SignalR_UserName">
                </div>
                <div class="flex-item flex-basis-35">

                    <label class="custom-flex-20">Username (CR) </label>
                    <input type="text" class="instyle" value="@idata.CrystalUserName">
                </div>
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20">   Store Index </label>
                    <input type="text" class="instyle" value="@idata.StoreId">
                </div>
            </div>
            <div class="flex-container">
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20">Password </label>
                    <input type="text" class="instyle" value="@idata.SignalR_Password">
                </div>
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20">Data Source   </label>
                    <input type="text" class="instyle" value="@idata.CrystalDataSource">
                </div>
                <div class="flex-item flex-basis-35">
                </div>
            </div>
            <div class="flex-container">
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20"> Connection </label>
                    <input type="text" class="instyle" value="@idata.CommunicationsUrl">
                </div>
                <div class="flex-item flex-basis-35">
                    <label class="custom-flex-20">   Password (CR) </label>
                    <input type="text" class="instyle" value="@idata.CrystalPassword">
                </div>
                <div class="flex-item flex-basis-35">
                </div>
            </div>
            <hr />
            <div class="custom-flex-row">
                <div class="flex-container">
                    <div class="flex-item flex-basis-35 custom-flex-start">
                        <label>Customer Display </label>
                    </div>
                    <div class="flex-item flex-basis-35">
                        <div class="control-group">
                            <label class="control control-checkbox">
                                @if (idata.EnableDisplay)
                                {
                                    <input type="checkbox" checked="checked" onclick="toggleCustomerDisplay()" />
                                }
                                else
                                {
                                    <input type="checkbox" onclick="toggleCustomerDisplay()" />
                                }
                                <div class="control_indicator"></div>
                            </label>
                        </div>
                    </div>
                    <div class="flex-item flex-basis-35">
                    </div>
                </div>
            </div>
            <div id="customerDisplayDiv">
                <h5 class="bluecolor">Display Settings</h5>
                <div class="flex-container">
                    <div class="flex-item custom-flex-25">
                        <label>   Display Instance </label>
                        <input type="text">
                    </div>
                    <div class="flex-item custom-flex-25">
                        <label>    Display Options </label>
                        <input type="text">
                    </div>
                    <div class="flex-item custom-flex-25">
                        <label>COM Port </label>
                        @*<input type="text" value="@idata.DisplayComPortName">*@
                        <select name="customerdisplay" id="customerdisplay">
                            @for (i = 0; i < 256; i++)
                            {
                                if (@idata.DisplayComPortName == "COM" + i)
                                {
                                    @Html.Raw("<option style=\"color:black\" selected   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                }
                                else
                                {
                                    @Html.Raw("<option style=\"color:black\"   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                }
                            }

                        </select>
                    </div>
                    <div class="flex-item custom-flex-25">
                        <label>Row Length </label>
                        <input type="text" value="@idata.DisplayCharLength">
                    </div>
                </div>
            </div>
            <div class="custom-flex-row">
                <div class="custom-flex-row">
                    <div class="flex-container">
                        <div class="flex-item flex-basis-35 custom-flex-start">
                            <label>Electronic Scale </label>
                        </div>
                        <div class="flex-item flex-basis-35">
                            <div class="control-group">
                                <label class="control control-checkbox">
                                    @if (idata.EnableScale)
                                    {
                                        <input type="checkbox" checked="checked" onclick="toggleElectronicScale()" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" onclick="toggleElectronicScale()" />
                                    }
                                    <div class="control_indicator"></div>
                                </label>
                            </div>
                        </div>
                        <div class="flex-item flex-basis-35">
                        </div>
                    </div>
                </div>
                <div id="electronicScaleDiv">
                    <h5 class="bluecolor">Scale Settings</h5>
                    <div class="flex-container">
                        <div class="flex-item custom-flex-25">
                            <label>   Scale Instance </label>
                            <input type="text">
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>    Scale Options </label>
                            <input type="text">
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>COM Port </label>
                            <select name="scaledisplay" id="scaledisplay">
                                @for (i = 0; i < 256; i++)
                                {
                                    if (@idata.ScaleComPortName == "COM" + i)
                                    {
                                        @Html.Raw("<option style=\"color:black\" selected   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                    }
                                    else
                                    {
                                        @Html.Raw("<option style=\"color:black\"   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                    }
                                }

                            </select>
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>Row Length </label>
                            <input type="text">
                        </div>
                    </div>
                </div>
            </div>
            <div class="custom-flex-row">
                <div class="custom-flex-row">
                    <div class="flex-container">
                        <div class="flex-item flex-basis-35 custom-flex-start">
                            <label>Payment Terminal </label>
                        </div>
                        <div class="flex-item flex-basis-35">
                            <div class="control-group">
                                <label class="control control-checkbox">
                                    @if (idata.EnableEFTPOS)
                                    {
                                        <input type="checkbox" checked="checked" onclick="toggleTerminal()" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" onclick="toggleTerminal()" />
                                    }
                                    <div class="control_indicator"></div>
                                </label>
                            </div>
                        </div>
                        <div class="flex-item flex-basis-35">
                        </div>
                    </div>
                </div>
                <div id="terminalDiv">
                    <h5 class="bluecolor">Terminal Settings</h5>
                    <div class="flex-container">
                        <div class="flex-item custom-flex-25">
                            <label>   Terminal Instance </label>
                            <input type="text">
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>    Terminal Options </label>
                            <input type="text">
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>COM Port </label>
                            <select name="scaledisplay" id="scaledisplay">
                                @for (i = 0; i < 256; i++)
                                {
                                    if (@idata.EFTPOS_TCPIP_Port == "COM" + i)
                                    {
                                        @Html.Raw("<option style=\"color:black\" selected   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                    }
                                    else
                                    {
                                        @Html.Raw("<option style=\"color:black\"   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                                    }
                                }

                            </select>
                        </div>
                        <div class="flex-item custom-flex-25">
                            <label>Row Length </label>
                            <input type="text">
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <h5 class="bluecolor">Extecr Settings</h5>  <div class="flex-container">
                <div class="flex-item flex-basis-35">
                    <label>Available Printers</label>
                    @Html.Raw("<select  id=\"selectedPrinter\" style=\"color:black\"; onchange=\"selectedPrinter(this.options[this.selectedIndex])\" > ");
                    @*<option selected="selected" value="-1" disabled> Selected :  @ViewBag.plugInname </option>*@

                    @foreach (InstallationDataModel x in idata.ExtcerDetailsList)
                    {
                        @Html.Raw("<option onchange=\"selectedPrinter()\" style=\"color:black\"   value = " + x.FiscalId + ">" + x.FiscalName + "</option")
                        <br />
                    }
                    @Html.Raw("</select>")
                </div>
                <div class="flex-item flex-basis-35">
                    <label>  Extecr Type </label>
                    <select name="scaledisplay" id="extecrtypes">
                        @foreach (string extecrtype in ExtecrTypes)
                        {
                            if (@extecrtype == Convert.ToString(@idata.ExtcerDetailsList[0].ExtcerType))
                            {
                                <option selected value="@extecrtype ">@extecrtype</option>
                            }
                            else
                            {
                            <option value="@extecrtype ">@extecrtype</option>
                            }
                        }
                    </select>
                </div>
                <div class="flex-item flex-basis-35">
                    @*<input type="text">
                    <button>   Copy Printer Settings</button>*@
                </div>
            </div>
            <div class="flex-container">
                <div class="flex-item flex-basis-35">
                
                </div>
                <div class="flex-item flex-basis-35">
                    <button>Add</button>
                    <button>Delete</button>
                </div>
                <div class="flex-item flex-basis-35">
                    <input type="text">
                    <button>   Copy Printer Settings</button>
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label> Fiscal Name  </label>
                    <input type="text" value="  @idata.ExtcerDetailsList[0].FiscalName">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>   Pos # </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].Pos">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>   Pos Description </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].PosDescr">
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Installation    </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].InstallationType">
                </div>
            </div>

            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Department </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].Department">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>   Description </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].DepartmentDesc">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>  Extecr Type </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].ExtcerType">
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Opos Type    </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].OposDeviceName">
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Max Length </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].OposMaxString" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label>   Ergospeed </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].ErgoSpd3EmptyJournal" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> COM Port</label>
                    <select name="opos3com" id="scaledisplay">
                        @for (i = 0; i < 256; i++)
                        {
                            if (@idata.ExtcerDetailsList[0].Opos3Com == "COM" + i)
                            {
                                @Html.Raw("<option style=\"color:black\" selected   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                            }
                            else
                            {
                                @Html.Raw("<option style=\"color:black\"   value = " + "COM" + i + ">" + "COM" + i + "</option>")
                            }
                        }

                    </select>
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Journal Path    </label>
                    <input type="text">
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Send To Journal  </label>
                    <input type="checkbox">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>   Cash </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].OposMethodOfPaymentCASH" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Credit Card</label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].OposMethodOfPaymentCC" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Credit </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].OposMethodOfPaymentCREDIT" />
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Vats  </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].VAT" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> File Path </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].ZipDitronFilePath" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Error File Path</label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].ZipDitronErrorFilePath" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Zip Ditron Dpt    </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].ZipDitronDpt" />
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Extra Zero Price  </label>
                    <input type="checkbox">
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Graphics Font </label>
                    <input type="text" value=" @idata.ExtcerDetailsList[0].GenericGraphicFontSize" />
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Graphic Bold</label>
                    @if (idata.ExtcerDetailsList[0].GenericGraphicBold)
                    {
                        <input type="checkbox" checked="checked">
                    }
                    else
                    {
                        <input type="checkbox">
                    }
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Ip Address   </label>
                    <input type="text">
                </div>
            </div>
            <div class="flex-container ">
                <div class="flex-item flex-basis-25">
                    <label>Port  </label>
                    <input type="text">
                </div>
                <div class="flex-item flex-basis-25">
                    <label> Cashier Login</label>
                    <input type="text">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>Cashier Pswrd</label>
                    <input type="text">
                </div>
                <div class="flex-item flex-basis-25">
                    <label>ECR Password   </label>
                    <input type="text">
                </div>
            </div>
        </div>
        <div id="about" data-tab-content>
            <h1>Printers</h1>
            <button>Add</button>
            <button>Remove</button>
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="#">
                            New Printer
                        </a>
                    </li>
                </ul>
            </div>
            <div class="flex-container">
                <div class="flex-item flex-basis-35">

                </div>
                <div class="flex-item flex-basis-35">

                    <label> Code </label>
                    <input type="text">
                </div>
                <div class="flex-item flex-basis-35">
                    <label>  Name </label>
                    <input type="text" value="New Printer">
                </div>
            </div>
        </div>
        <div id="news" data-tab-content>
            <div id="app">
                <div class="container">
                    <header>
                        <div id="head-wrap" class="header-headings sign-up">
                        </div>
                    </header>
                    <form class="account-form">
                        <div id="form-area" class="account-form-fields sign-up">
                            <input id="email" name="email" type="text" placeholder="User" required="">
